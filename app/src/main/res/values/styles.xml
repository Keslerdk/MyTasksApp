<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.MyTaskApp.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="color">@color/oxford_blue</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.MyTasksApp.MaterialDatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="materialCalendarHeaderToggleButton">
            @style/Widget.AppTheme.MaterialCalendar.HeaderToggleButton
        </item>
        <item name="colorPrimary">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Widget.AppTheme.MaterialCalendar.HeaderToggleButton" parent="Widget.MaterialComponents.MaterialCalendar.HeaderToggleButton">
        <item name="android:visibility">gone</item>
    </style>
</resources>